# Search Agent Environment Configuration

# =============================================================================
# API KEYS (BẮT BUỘC)
# =============================================================================
GOOGLE_API_KEY=your_google_gemini_api_key_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Search Agent server settings
SEARCH_AGENT_HOST=0.0.0.0
SEARCH_AGENT_PORT=10002

# =============================================================================
# VECTOR DATABASE CONFIGURATION (BẮT BUỘC)
# =============================================================================
# Qdrant for product embeddings and search
QDRANT_HOST=your-qdrant-server
QDRANT_PORT=6333
QDRANT_API_KEY=your_qdrant_api_key_if_any

# Collection names
PRODUCT_COLLECTION=product_embeddings
TEXT_COLLECTION=text_embeddings

# =============================================================================
# CLIP MODEL CONFIGURATION
# =============================================================================
# CLIP model for multimodal search
CLIP_MODEL=openai/clip-vit-base-patch32
CLIP_DEVICE=cpu

# Image processing
MAX_IMAGE_SIZE=512
IMAGE_QUALITY=85

# =============================================================================
# SEARCH CONFIGURATION
# =============================================================================
# Search parameters
TOP_K_RESULTS=10
SIMILARITY_THRESHOLD=0.6

# Hybrid search weights
TEXT_WEIGHT=0.7
IMAGE_WEIGHT=0.3

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# ADVANCED SETTINGS (OPTIONAL)
# =============================================================================
REQUEST_TIMEOUT=30

# Cache settings
ENABLE_CACHE=true
CACHE_TTL=3600 
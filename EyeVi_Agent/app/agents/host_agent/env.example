# Host Agent Configuration
HOST=0.0.0.0
PORT=8080
RELOAD=true

# Google AI API Key (Required)
GOOGLE_API_KEY=your_google_api_key_here

# Redis Configuration (for chat history storage)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# A2A Agent URLs (Optional - defaults to localhost)
ADVISOR_AGENT_URL=http://localhost:10001
SEARCH_AGENT_URL=http://localhost:10002
ORDER_AGENT_URL=http://localhost:10003

# MySQL Database Configuration (for message history)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=chat_db

# Logging Level
LOG_LEVEL=INFO 
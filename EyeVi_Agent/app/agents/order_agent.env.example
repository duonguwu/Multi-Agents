# Order Agent Environment Configuration

# =============================================================================
# API KEYS (BẮT BUỘC)
# =============================================================================
GOOGLE_API_KEY=your_google_gemini_api_key_here

# =============================================================================
# DATABASE CONFIGURATION (BẮT BUỘC)
# =============================================================================
# MySQL Database for product and order data
MYSQL_HOST=your-mysql-server
MYSQL_PORT=3306
MYSQL_DATABASE=eyevi_db
MYSQL_USER=eyevi_user
MYSQL_PASSWORD=your_mysql_password

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
# Agent type: simplified, simple, streaming
AGENT_TYPE=simplified

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# ADVANCED SETTINGS (OPTIONAL)
# =============================================================================
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
REQUEST_TIMEOUT=30 
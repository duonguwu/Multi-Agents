# File cấu hình môi trường mẫu
# Sao chép thành .env và điền các giá trị cần thiết

# API Key cho Google Gemini (Bắt buộc)
GOOGLE_API_KEY=your_google_gemini_api_key

# Cấu hình Qdrant
QDRANT_HOST=qdrant  # Sử dụng "qdrant" khi chạy với docker-compose
QDRANT_PORT=6333

# Cấu hình ứng dụng
DEBUG=True  # Đặt False trong môi trường sản xuất
HOST=0.0.0.0
PORT=8000

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL 